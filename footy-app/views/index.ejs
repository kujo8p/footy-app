<%- include('./partials/header')%>

<h2>Bayern Blog Page</h2>

<table id="post">
  <tbody>
    <% posts.forEach(function(p) { %>
      <tr>
        <div id="title"><%= p.title %></div><br>
        <div><td id="content"><%= p.content %></td></div>
        <td><form action="/<%= p._id %>?_method=DELETE" method="POST"
          class="delete-form">
          <button type="submit">X</button>
        </form></td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <hr>

  <% if (user) { %>
<form action="/" method="POST" autocomplete="off">
  <div>Title</div>
  <input type="text" name="title"><br>
  <div>Content</div>
  <textarea name="content" id="" cols="80" rows="5"></textarea><br>
  <button type="submit">Create Post</button>
</form>
<% } %>

<%- include('./partials/footer')%>